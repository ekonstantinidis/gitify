{
  "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
  "testFileExtensions": ["es6", "js"],
  "moduleFileExtensions": ["js", "json", "es6"],
  "collectCoverage": true,
  "collectCoverageOnlyFrom": {
    "<rootDir>/src/js/actions/actions.js": true,
    "<rootDir>/src/js/components/login.js": true,
    "<rootDir>/src/js/components/navigation.js": true,
    "<rootDir>/src/js/components/notification.js": true,
    "<rootDir>/src/js/components/notifications.js": true,
    "<rootDir>/src/js/components/repository.js": true,
    "<rootDir>/src/js/components/search.js": true,
    "<rootDir>/src/js/components/settings.js": true,
    "<rootDir>/src/js/components/search-input.js": true,
    "<rootDir>/src/js/stores/auth.js": true,
    "<rootDir>/src/js/stores/notifications.js": true,
    "<rootDir>/src/js/stores/search.js": true,
    "<rootDir>/src/js/stores/settings.js": true,
    "<rootDir>/src/js/stores/sound-notification.js": true
  },
  "testPathDirs": [
    "<rootDir>/src/js/__tests__/"
  ],
  "testPathIgnorePatterns": [
    "<rootDir>/src/js/__tests__/__mocks__/"
  ],
  "modulePathIgnorePatterns": [
    "<rootDir>/node_modules/"
  ],
  "unmockedModulePathPatterns": [
    "<rootDir>/node_modules/react",
    "<rootDir>/node_modules/react-dom",
    "<rootDir>/node_modules/react-addons-test-utils",
    "<rootDir>/node_modules/history",
    "<rootDir>/node_modules/underscore"
  ]
}
