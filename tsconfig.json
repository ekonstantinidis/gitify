{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "first-run.js",
    "main.js"
  ]
}
